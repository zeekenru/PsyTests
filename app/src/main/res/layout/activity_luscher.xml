<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.test.LusherActivity">

    <ImageView
        android:id="@+id/back_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="32dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_arrow_back_black_24dp" />

    <TextView
        android:id="@+id/instruction_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:paddingStart="8dp"
        android:paddingEnd="8dp"
        android:text="Какой из этих восьми цветов кажется вам наиболее симпатичным?"
        android:textAlignment="center"
        android:textColor="@color/accentTextColor"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/back_btn" />

    <GridLayout
        android:id="@+id/colors_cards_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="64dp"
        android:layout_marginBottom="8dp"
        android:columnCount="4"
        android:rowCount="2"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/instruction_text">

        <View
            android:id="@+id/lusher_color_1"
            android:layout_width="80dp"
            android:layout_height="120dp"
            android:background="@color/primaryLightColor" />

        <View
            android:id="@+id/lusher_color_2"
            android:layout_width="80dp"
            android:layout_height="120dp"
            android:layout_marginStart="8dp"
            android:background="@color/primaryLightColor" />

        <View
            android:id="@+id/lusher_color_3"
            android:layout_width="80dp"
            android:layout_height="120dp"
            android:layout_marginStart="8dp"
            android:background="@color/primaryLightColor" />

        <View
            android:id="@+id/lusher_color_4"
            android:layout_width="80dp"
            android:layout_height="120dp"
            android:layout_marginStart="8dp"
            android:background="@color/primaryLightColor" />

        <View
            android:id="@+id/lusher_color_5"
            android:layout_width="80dp"
            android:layout_height="120dp"
            android:layout_marginTop="24dp"
            android:background="@color/primaryLightColor" />

        <View
            android:id="@+id/lusher_color_6"
            android:layout_width="80dp"
            android:layout_height="120dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="24dp"
            android:background="@color/primaryLightColor" />

        <View
            android:id="@+id/lusher_color_7"
            android:layout_width="80dp"
            android:layout_height="120dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="24dp"
            android:background="@color/primaryLightColor" />

        <View
            android:id="@+id/lusher_color_8"
            android:layout_width="80dp"
            android:layout_height="120dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="24dp"
            android:background="@color/primaryLightColor" />

    </GridLayout>
    <include
        android:id="@+id/luscher_pause_layout"
        android:visibility="gone"
        layout="@layout/luscher_pause_laoyut"/>
</android.support.constraint.ConstraintLayout>