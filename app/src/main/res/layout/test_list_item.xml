<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="8dp"
    android:layout_marginTop="8dp"
    android:layout_marginEnd="8dp"
    app:cardCornerRadius="4dp">

    <android.support.constraint.ConstraintLayout
        android:id="@+id/root_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingEnd="8dp">

        <TextView
            android:id="@+id/test_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:textColor="@color/accentTextColor"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/questions_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            app:layout_constraintBottom_toBottomOf="@+id/duration_text"
            app:layout_constraintStart_toEndOf="@+id/duration_text"
            app:layout_constraintTop_toBottomOf="@+id/test_name" />

        <TextView
            android:id="@+id/duration_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:drawableStart="@drawable/ic_access_time_black_19dp"
            android:drawablePadding="8dp"
            app:layout_constraintStart_toStartOf="@+id/test_name"
            app:layout_constraintTop_toBottomOf="@+id/test_name" />

        <Button
            android:id="@+id/pass_btn"
            style="@style/ButtonStyle"
            android:layout_width="140dp"
            android:layout_height="45dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="24dp"
            android:layout_marginBottom="8dp"
            android:backgroundTint="@color/primaryLightColor"
            android:text="@string/pass"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/questions_count" />

        <TextView
            android:id="@+id/more_info_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:text="Подробнее"
            android:textColor="@color/primaryLightColor"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@+id/pass_btn"
            app:layout_constraintStart_toEndOf="@+id/pass_btn"
            app:layout_constraintTop_toTopOf="@+id/pass_btn" />
    </android.support.constraint.ConstraintLayout>

</android.support.v7.widget.CardView>