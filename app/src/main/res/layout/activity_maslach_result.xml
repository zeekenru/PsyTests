<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/primaryDarkColor"
    android:fillViewport="true"
    tools:context=".ui.result.OneScaleResultActivity">

    <android.support.constraint.ConstraintLayout
        android:layout_marginBottom="8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <ImageView
            android:id="@+id/close_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            app:layout_constraintBottom_toBottomOf="@+id/share_btn"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/ic_close_white_24dp" />

        <ImageView
            android:id="@+id/share_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="16dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/ic_share_white_24dp" />

        <TextView
            android:id="@+id/first_scale_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="104dp"
            android:text="Эмоциальное истощение"
            android:textColor="@color/accentTextColor"
            android:textSize="24sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.501"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/first_scale_result"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="first_scale_result"
            android:textAlignment="center"
            android:textColor="@android:color/white"
            android:textSize="24sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="@+id/first_scale_summary"
            app:layout_constraintStart_toStartOf="@+id/first_scale_summary"
            app:layout_constraintTop_toBottomOf="@+id/first_scale_summary" />

        <TextView
            android:id="@+id/first_scale_summary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="25/54"
            android:textColor="@color/accentTextColor"
            android:textSize="24sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="@+id/first_scale_name"
            app:layout_constraintStart_toStartOf="@+id/first_scale_name"
            app:layout_constraintTop_toBottomOf="@+id/first_scale_name" />

        <TextView
            android:id="@+id/second_scale_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:text="Деперсонализация"
            android:textAlignment="center"
            android:textColor="@color/accentTextColor"
            android:textSize="24sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="@+id/first_scale_result"
            app:layout_constraintStart_toStartOf="@+id/first_scale_result"
            app:layout_constraintTop_toBottomOf="@+id/first_scale_result" />

        <TextView
            android:id="@+id/second_scale_summary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="11/30"
            android:textColor="@color/accentTextColor"
            android:textSize="24sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="@+id/second_scale_name"
            app:layout_constraintStart_toStartOf="@+id/second_scale_name"
            app:layout_constraintTop_toBottomOf="@+id/second_scale_name" />

        <TextView
            android:id="@+id/second_scale_result"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Средний уровень"
            android:textColor="@android:color/white"
            android:textSize="24sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="@+id/second_scale_summary"
            app:layout_constraintStart_toStartOf="@+id/second_scale_summary"
            app:layout_constraintTop_toBottomOf="@+id/second_scale_summary" />

        <TextView
            android:id="@+id/third_scale_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="48dp"
            android:text="Редукция профессионализма"
            android:textColor="@color/accentTextColor"
            android:textSize="24sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="@id/second_scale_result"
            app:layout_constraintStart_toStartOf="@+id/second_scale_result"
            app:layout_constraintTop_toBottomOf="@+id/second_scale_result" />

        <TextView
            android:id="@+id/third_scale_summary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="15/30"
            android:textColor="@color/accentTextColor"
            android:textSize="24sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="@+id/third_scale_name"
            app:layout_constraintStart_toStartOf="@+id/third_scale_name"
            app:layout_constraintTop_toBottomOf="@+id/third_scale_name" />

        <TextView
            android:id="@+id/third_scale_result"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp"
            android:text="Низкий уровень"
            android:textColor="@android:color/white"
            android:textSize="24sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="@+id/third_scale_summary"
            app:layout_constraintStart_toStartOf="@+id/third_scale_summary"
            app:layout_constraintTop_toBottomOf="@+id/third_scale_summary" />

        <ImageView
            android:id="@+id/info_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="32dp"
            app:layout_constraintEnd_toStartOf="@+id/share_btn"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/ic_info_outline_white_24dp" />

    </android.support.constraint.ConstraintLayout>
</ScrollView>